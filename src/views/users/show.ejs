<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>


      <h1><%= `${user.email}'s profile` %></h1>

      <hr>

      <h2> Latest Posts</h2>

      <ul class="list-unstyled">


        <% if(posts) { %>
          <% posts.forEach((post) => { %>

            <li>
              <a href="/topics/<%= post.topicId %>/posts/<%= post.id %>">
                <%= post.title %>
              </a>
            </li>
          <% }) %>
        <% } %>
      </ul>
      <hr>

      <h2> Latest Favorited Posts</h2>

      <ul class="list-unstyled">


        <% if (favorites) { %>
          <% favorites.forEach(favorite => { %>
            <%- JSON.stringify(favorite.postId) %>

            <li>
              <a href="/topics/<%= favorite.getPost().topicId %>/posts/<%= favorite.getPost().id %>">
                <%= favorite.getPost().title %>
              </a>
            </li>

            <% }) %>
        <% } else { %>
          <p> You have no favorites currently, go read some posts and add to your collection of Favorite Posts! </p>
        <% } %>

      </ul>
      <hr>

      <h2> Latest Comments</h2>

      <ul class="list-unstyled">


        <% if(comments) { %>
          <% comments.forEach((comment) => { %>

            <li>
              <span>Post: </span><a href="/topics/<%= comment.Post.topicId %>/posts/<%= comment.Post.id %>">
                <%= comment.Post.title %>
              </a>
              <p>Comment: <%= comment.body %></p>
            </li>
            <hr>
          <% }) %>
        <% } %>
      </ul>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
